@require '~styles/_colors'

@keyframes rotate-full
  from
    transform rotate(0deg)

  to
    transform rotate(360deg)

.loader-rotating
  animation rotate-full 1250ms infinite ease
  border .25em solid $sunGlowColor
  border-right-color transparent
  border-radius 1em
  box-sizing border-box
  display inline-block
  position relative
  overflow hidden
  text-indent -9999px
  width 1.5em
  height 1.5em